{
  "languageserver": {
    "tailwind-lsp": {
      "command": "tailwindcss-language-server.cmd",
      "args": ["--stdio"],

      "filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
      ],

      "rootPatterns": [
        "tailwind.config.js",
        "tailwind.config.ts",
        "postcss.config.js",
        "postcss.config.ts",
        "package.json",
        "node_modules",
        ".git"
      ],
      "settings": {
        "tailwindCSS": {
          "validate": true,
          "lint": {
            "cssConflict": "warning",
            "invalidApply": "error",
            "invalidScreen": "error",
            "invalidVariant": "error",
            "invalidConfigPath": "error",
            "invalidTailwindDirective": "error",
            "recommendedVariantOrder": "warning"
          },
          "classAttributes": [
            "class",
            "className",
            "classList",
            "ngClass",
            "ng-class"
          ],
          "experimental": {}
        }
      }
    },
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".clang-format",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },
  "Lua.completion.enable": false,
  "Lua.diagnostics.globals": ["vim"],
  "coc.preferences.formatOnType": false,
  "diagnostic.enableMessage": "always",
  "diagnostic.errorSign": "E",
  "diagnostic.hintSign": "H",
  "diagnostic.infoSign": "I",
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextLineSeparator": " ﬋ ",
  "diagnostic.virtualTextPrefix": "  ",
  "diagnostic.warningSign": "W",
  "eslint.enable": true,
  "html.filetypes": [
    "html",
    "vue",
    "handlebars",
    "template",
    "javascriptreact"
  ],
  "html.format.wrapAttributes": "force-aligned",
  "javascript.format.semicolons": "remove",
  "javascript.suggest.autoImports": true,
  "javascript.suggest.completeJSDocs": true,
  "javascript.preferences.quoteStyle": "single",
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "eslint.autoFixOnSave": false,
  "rust-analyzer.checkOnSave.enable": false,
  "rust-analyzer.server.path": "D:\\Binaries\\rust-analyzer.exe",
  "semanticTokens.enable": true,
  "snippets.ultisnips.directories": ["UltiSnips", "gosnippets/UltiSnips"],
  "snippets.ultisnips.enable": true,
  "suggest.enablePreselect": false,
  "suggest.noselect": true,
  "suggest.virtualText": true,
  "typescript.preferences.jsxAttributeCompletionStyle": "auto",
  "volar.autoClosingTags": true,
  "volar.autoCompleteRefs": true,
  "volar.diagnostics.tsLocale": "zh-cn",
  "coc.source.omni.filetypes": ["org"],
  "snippets.ultisnips.pythonPrompt": false
}
